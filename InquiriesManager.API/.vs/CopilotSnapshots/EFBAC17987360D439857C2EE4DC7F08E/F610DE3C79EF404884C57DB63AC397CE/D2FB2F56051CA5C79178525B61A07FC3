using Microsoft.AspNetCore.Mvc;
using Microsoft.Data.SqlClient;
using System.Data;

namespace InquiriesManager.API.Controllers
{
    [ApiController]
    [Route("api/[controller]")]
    public class ReportController : ControllerBase
    {
        private readonly IConfiguration _config;

        public ReportController(IConfiguration config)
        {
            _config = config;
        }

        [HttpGet("monthly")]
        public async Task<IActionResult> GetMonthlyReport(int year, int month)
        {
            var result = new List<object>();
            using var conn = new SqlConnection(_config.GetConnectionString("DefaultConnection"));
            using var cmd = new SqlCommand("MonthlyInquiriesReport", conn)
            {
                CommandType = CommandType.StoredProcedure
            };
            cmd.Parameters.AddWithValue("@ReportYear", year);
            cmd.Parameters.AddWithValue("@ReportMonth", month);

            await conn.OpenAsync();
            using var reader = await cmd.ExecuteReaderAsync();
            while (await reader.ReadAsync())
            {
                result.Add(new
                {
                    Department = reader["Department"],
                    CurrentMonthCount = reader["CurrentMonthCount"],
                    PreviousMonthCount = reader["PreviousMonthCount"],
                    LastYearSameMonthCount = reader["LastYearSameMonthCount"]
                });
            }
            return Ok(result);
        }
    }
}
